global:
  scrape_interval: 15s
  evaluation_interval: 15s
  external_labels:
    monitor: 'sharpe10'

alerting:
  alertmanagers:
    - static_configs:
        - targets: ['${ALERTMANAGER_HOST}:${ALERTMANAGER_PORT}']

rule_files:
  - /etc/prometheus/alert.yml

scrape_configs:
  - job_name: 'node_exporter'
    static_configs:
      - targets:
          - '${SERVER1_HOST}:${NODE_EXPORTER_PORT}'  # Server 1 (bare metal)
          - '${SERVER2_HOST}:${NODE_EXPORTER_PORT}'  # Server 2 (Swarm)
          - '${SERVER3_HOST}:${NODE_EXPORTER_PORT}'  # Server 3 (Swarm)

  - job_name: 'kafka_exporter'
    static_configs:
      - targets:
          - '${SERVER3_IP}:${KAFKA_EXPORTER_PORT}'
